# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here

# Database Configuration
DATABASE_URL=sqlite:///instance/blog.db

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_ORG_ID=your-organization-id  # Optional
OPENAI_API_BASE=https://api.openai.com/v1
OPENAI_DEFAULT_MODEL=gpt-3.5-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# LLM Settings
LLM_PROVIDER_TYPE=openai  # or 'ollama'
LLM_MODEL_NAME=gpt-3.5-turbo  # or local model name
LLM_API_BASE=  # Optional: custom API endpoint

# Cache Configuration
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# Clan.com Integration
CLAN_API_KEY=your-clan-api-key
CLAN_API_ENDPOINT=https://api.clan.com/v1/blog 