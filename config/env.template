# BlogForge Configuration Template
# Copy this file to .env and update the values

# Application Settings
FLASK_ENV=development
DEBUG=True
SECRET_KEY=dev-secret-key-change-in-production
HOST=0.0.0.0
PORT=5000

# Database Configuration
DATABASE_URL=postgresql://autojenny@localhost:5432/blog
DB_HOST=localhost
DB_PORT=5432
DB_NAME=blog
DB_USER=autojenny
DB_PASSWORD=

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FILE=unified_app.log

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5000,http://127.0.0.1:5000

# Session Configuration
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# File Upload Configuration
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=static/content/posts

# AI/LLM Configuration
OPENAI_API_KEY=your_openai_api_key_here
OLLAMA_HOST=http://localhost:11434
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Clan API Configuration
CLAN_API_BASE_URL=https://api.clan.com
CLAN_API_KEY=your_clan_api_key_here

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Email Configuration
MAIL_SERVER=localhost
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_DEFAULT_SENDER=noreply@blogforge.com

# Social Media Configuration
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# Image Processing Configuration
IMAGE_PROCESSING_ENABLED=True
IMAGE_MAX_WIDTH=1920
IMAGE_MAX_HEIGHT=1080
IMAGE_QUALITY=85

# Cache Configuration
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# Security Configuration
WTF_CSRF_ENABLED=True
WTF_CSRF_TIME_LIMIT=3600

# Performance Configuration
JSON_SORT_KEYS=False
JSONIFY_PRETTYPRINT_REGULAR=True
